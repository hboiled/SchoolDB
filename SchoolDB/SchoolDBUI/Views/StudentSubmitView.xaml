<UserControl x:Class="SchoolDBUI.Views.StudentSubmitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolDBUI.Views"
             mc:Ignorable="d" 
             Background="WhiteSmoke" FontSize="20"
             d:DesignHeight="700" d:DesignWidth="950">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="237.5"/>
            <ColumnDefinition Width="340.5"/>
            <ColumnDefinition Width="372"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" Margin="10,10,10,10">
            <TextBlock Text="Placeholder" FontSize="24"/>

            <!--<Image Source="../Content/placeholder.png" MaxHeight="200px" /> Release path -->
            <Border BorderThickness="2" BorderBrush="Black">
                <Image Source="http://web.engr.oregonstate.edu/~johnstom/img/people/placeholder.png" MaxHeight="200px" />
            </Border>

            <Button Content="Upload Photo" Margin="0,10,0,10" ></Button>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="5,40,5,0" HorizontalAlignment="Right">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="First Name:"></Label>
                <TextBox Width="180" MaxHeight="30"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="Last Name:"></Label>
                <TextBox Width="180" MaxHeight="30"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="D.O.B:"></Label>
                <TextBox Width="180" MaxHeight="30"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="School Email:"></Label>
                <TextBox Width="180" MaxHeight="30"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="Contact Email:"></Label>
                <TextBox Width="180" MaxHeight="30"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="First Name:"></Label>
                <TextBox Width="180" MaxHeight="30"></TextBox>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="2" Margin="20,0,10,0">
            <Label Content="Enrollments"></Label>
            <ListView Height="275">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="160" >
                            <GridViewColumnHeader TextElement.FontSize="18">Course Id</GridViewColumnHeader>
                        </GridViewColumn>
                        <GridViewColumn Width="200">
                            <GridViewColumnHeader TextElement.FontSize="18">Title</GridViewColumnHeader>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <TextBlock Text="Course Selection" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,0"></TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,15,5,15">
                <Label Content="Department:"></Label>
                <ComboBox Height="35" Width="180" SelectedItem="{Binding SelectedSubjectFilter}"
                          ItemsSource="{Binding Subjects}"></ComboBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="5,5,5,10">
                <Label Content="Select Course:" HorizontalAlignment="Center"></Label>
                <ComboBox Height="30" Width="330"></ComboBox>
            </StackPanel>

            <Button Content="Add Enrollment" Margin="5,5,5,5"></Button>

        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20,400,10,0">
            <Label Content="Addresses"></Label>
            <ListView Height="150">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="200" >
                            <GridViewColumnHeader TextElement.FontSize="18" Content="Location"/>
                        </GridViewColumn>
                        <GridViewColumn Width="90">
                            <GridViewColumnHeader TextElement.FontSize="18" Content="Status"/>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

        </StackPanel>
    </Grid>
</UserControl>
